{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": ["../*"],
            "@config/*": ["../config/*"],
            "@element/*": ["components/elements/*"],
            "@layout/*": ["components/layouts/*"],
            "@module/*": ["components/modules/*"],
            "@template/*": ["components/templates/*"],
            "@context/*": ["contexts/*"],
            "@hook/*": ["hooks/*"],
            "@util/*": ["utils/*"],
            "@style/*": ["styles/*"],
            "@asset/*": ["../public/assets/*"]
        }
    },
    "exclude": ["node_modules"]
}