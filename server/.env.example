# Runtime
NODE_ENV=production
HOST=0.0.0.0
PORT=1337

# Public URL of this Strapi instance (used for media/upload URLs)
PUBLIC_URL=https://strapi.bdeinfo.org

# Security tokens — generate each with: openssl rand -base64 32
# APP_KEYS requires 4 comma-separated values
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=replace_me
TRANSFER_TOKEN_SALT=replace_me
ADMIN_JWT_SECRET=replace_me
JWT_SECRET=replace_me

# Session lifespans in seconds (optional — defaults shown)
ADMIN_MAX_REFRESH_TOKEN_LIFESPAN=2592000
ADMIN_MAX_SESSION_LIFESPAN=604800

# Database (SQLite)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=./database/data.db

# Discord webhook for contact form notifications (optional)
DISCORD_WEBHOOK_URL=
